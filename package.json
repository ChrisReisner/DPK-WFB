{
  "name": "dpk-wfb",
  "version": "1.0.0",
  "description": "Begrüßung zur Weihnachtsfeier 2025",
  "main": "index.html",
  "scripts": {
    "clean": "rimraf  dist",
   
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylelint src/scss/*.scss  --custom-syntax postcss-scss",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "lint": "stylelint src/scss/*.scss  postcss-scss",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "build:images": "imagemin \"src/images\" --out-dir=\"dist/images\"",
    "watch:images": "onchange \"src/images\" -- npm run build:images && onchange \"src/images/backgrounds\" -- npm run build:images",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "build:copy": "cp src/sound dist/sound -r",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChrisReisner/DPK-WFB.git"
  },
  "keywords": [
    "Chris.Reisner",
    "Bezirksgruppe",
    "DPK", "Weihnachtsfeier",
    "Ma/Hd"
  ],
  "author": "Chris. Reisner",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.2",
    "browser-sync": "^3.0.4",
    "eslint": "^8.35.0",
    "eslint-webpack-plugin": "^4.0.0",
    "htmlnano": "^2.1.5",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.1.0",
    "postcss-scss": "^4.0.6",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.7.7",
    "posthtml-modules": "^0.9.1",
    "stylelint": "^15.2.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "cssnano": "^7.0.7",
    "imagemin": "^9.0.1",
    "imagemin-cli": "^8.0.0",
    "moment": "^2.30.1",
    "uuid": "^7.0.3"
  },
  "overrides": {
    "rimraf": "^6.0.1"
  }
}
